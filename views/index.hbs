<!-- search bar -->
<div class="container search-bar">
    <div class="search-bar-outer">
      <div class="search-bar-inner">
        <form class="row justify-content-between" action="/restaurants/search" method="get">
          <h4 class="mb-2">尋找餐廳：</h4>
          <div class="col-8">
          <div class="input-group">
            <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..." value="{{this.keyword}}" aria-describedby="search-button" required>
            <div class="input-group-append">
              <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            </div>
          </div>
          </div>
          <div class="col-auto">
          <button class="btn btn-outline-dark dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            {{#if this.selected}}
            {{this.selected}}
            {{else}}
            排序
            {{/if}}
          </button>
            <ul class="dropdown-menu dropdown-menu-end">
              <li><a class="dropdown-item" href="/restaurants/sort_id:asc?type=A-Z">A-Z</a></li>
              <li><a class="dropdown-item" href="/restaurants/sort_id:desc?type=Z-A">Z-A</a></li>
              <li><a class="dropdown-item" href="/restaurants/sortlocation:asc?type=Location">Location</a></li>
              <li><a class="dropdown-item" href="/restaurants/sortcategory:asc?type=Category">Category</a></li>
            </ul>
          </div>
        </form>
      </div>
    </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row justify-content-center">
          {{#each restaurant}}
        
          <div class="card p-0 col-sm-3 mx-3 mb-3">
            <a href="/restaurants/{{this._id}}" class="text-secondary">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            </a>
            <div class="card-body">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pe-2"></i> {{this.category}}
              </div>

                <span class="badge rounded-pill bg-danger font-weight-normal">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>
                <div class="float-end" style="display: inline;">
                <a class="btn btn-outline-info btn-sm" href="/restaurants/{{this._id}}">detail</a>
                <a class="btn btn-outline-primary btn-sm" href="/restaurants/{{this._id}}/edit">edit</a>
                <form action="/restaurants/{{this._id}}?_method=DELETE" method="post" style="display: inline;">
                  <button class="btn btn-outline-danger btn-sm" type="submit">delete</button>
                </form>
                </div>
              </div>
          </div>
        {{/each}}
  </div>
</div>